@page
@model LogoutModel
@{
    ViewData["Title"] = "Log Out";
}

<header>
    <!-- Display the page title -->
    <h1>@ViewData["Title"]</h1>
    @{
        // Check if the user is authenticated
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <!-- If the user is authenticated, show the logout form -->
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Click here to Log Out</button>
            </form>
        }
        else
        {
            <!-- If the user is not authenticated, show a message indicating successful logout -->
            <p>Successfully logged out of the application.</p>
        }
    }
</header>
