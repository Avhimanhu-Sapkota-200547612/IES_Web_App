@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!-- Container for the registration form -->
<div class="row">
    <div class="col-md-4 m-auto py-3">

        <!-- Registration form -->
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <!-- Heading for the registration form -->
            <h2 class="text-center" style="color:#800000">Create an Account - Sign UP</h2>
            <hr />

            <!-- Display validation summary if there are model errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Email input field with floating label -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" style="color:#800000">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Role selection dropdown with floating label -->
            <div class="form-floating mb-2" >
                <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                    <option disabled selected>Select Role</option>
                </select>
                <label asp-for="Input.Role" style="color:#800000">Role</label>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>

            <!-- Password input field with floating label -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" style="color:#800000">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password input field with floating label -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" style="color:#800000">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Submit button -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:#800000; border-color:#800000">Register</button>
        </form>
    </div>
</div>

<!-- Partial view for validation scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
